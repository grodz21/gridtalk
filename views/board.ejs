<!doctype html>
<html class="board-bg">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>GRIDTALK</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.no-icons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" />
    <link rel="stylesheet" href="/css/cardStyle.css" />
    <link rel="stylesheet" href="/css/style.css" />
    <style>
        body        { padding-top:350px; }
        body        { background-size: 100%; background-attachment: fixed; background-color: black;}
    </style>
</head>
<body class="messageBoardStyle">
<div class="container" id="logoContainer">
    <div class="row" class="col-sm-12" class="logoMobile">
        <img src="/images/mobile-art/logoWhite.png" style="height: 350px;" />
    </div>
</div>

<div class="container">
    <div class="col-sm-4 col-sm-offset-3" style="width: 600px;">
        <form action="/messages" method="POST" style="display: inline-block;">
          <input type="text" name="message" id="message" placeholder="Message" style="
            height: 30px;margin-top: 10px;">          
          <button type="submit" class="btn btn-success">
            SUBMIT
          </button>
        </form>

        <form action="/messages" method="GET" style="display: inline-block;">
            <button type="submit" class="btn btn-default">
                REFRESH
            </button>
        </form>

        <form action="/profile" method="GET" style="display: inline-block;">
            <button type="submit" class="btn btn-default">
                <i class="icon-user icon-large"></i> PROFILE
            </button>
        </form>
    </div>

    <div class="col-sm-11">
        <hr>
    </div>

    <div class="col-sm-12" id="postWrapper">
        <div style="display: flex; flex-wrap: wrap;" class="postCardWrapper">
            <% messages.forEach(function(message){ %>
            <% include materialCard.ejs %> <% });%>
        </div>
    </div>





</div>
</body>
</html>